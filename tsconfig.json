{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "esnext",
    "lib": ["dom", "dom.iterable"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "inlineSources": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
